<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_res_config_settings_zatca" model="ir.ui.view">
        <field name="name">res.config.settings.zatca</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <!-- هنضيف block جديد جوا General Settings -->
            <xpath expr="//app[@name='general_settings']" position="inside">
                <block title="ZATCA Integration" name="zatca_settings_block">
                    <setting id="zatca_enable_setting">
                        <field name="enable_zatca"/>
                        <label for="enable_zatca"/>
                        <div class="text-muted">Enable ZATCA e-Invoicing</div>
                    </setting>

                    <setting id="zatca_sandbox_url_setting">
                        <field name="zatca_sandbox_url"/>
                        <label for="zatca_sandbox_url"/>
                    </setting>

                    <setting id="zatca_username_setting">
                        <field name="zatca_username"/>
                        <label for="zatca_username"/>
                    </setting>

                    <setting id="zatca_certificate_path_setting">
                        <field name="zatca_certificate_path" filename="zatca_cert.p12"/>
                        <label for="zatca_certificate_path"/>
                    </setting>

                    <setting id="zatca_certificate_password_setting">
                        <field name="zatca_certificate_password"/>
                        <label for="zatca_certificate_password"/>
                    </setting>

                    <setting id="zatca_mode_setting">
                        <field name="zatca_mode"/>
                        <label for="zatca_mode"/>
                    </setting>
                </block>
            </xpath>

        </field>
    </record>
</odoo>
